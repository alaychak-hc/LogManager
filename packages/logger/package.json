{
  "name": "@caretracker/log-manager",
  "author": "Andrew Laychak",
  "description": "Log Manager",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://github.com/alaychak-hc/LogManager#readme",
  "repository": {
    "type": "git",
    "url": "github:alaychak-hc/LogManager"
  },
  "bugs": {
    "url": "https://github.com/HarrisCareTracker/LogManager/issues"
  },
  "private": true,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "host": "lt --port 4100 --subdomain ctfhir",
    "build": "pnpm clean && ttsc && pnpm copy-files",
    "docs:build": "pnpm typedoc",
    "buildOLD": "npm run typedoc && npm run clean && ttsc && npm run copy-files",
    "clean": "rimraf ./dist",
    "compile-ts": "ttsc",
    "copy-files": "copyfiles \"src/docs/**/*\" dist && copyfiles \"src/cert/**/*\" dist && copyfiles \"src/db/**/*\" dist && copyfiles process.json dist",
    "preinstall": "npx only-allow pnpm",
    "lint:staged": "lint-staged --debug --verbose",
    "lint": "eslint src --ext .ts --ignore-pattern __tests__/ --fix",
    "lint-html": "eslint src --ext .ts --ignore-pattern __tests__/ --output-file out/lint.html --format html",
    "pm2-log": "pm2 logs 'LogManager'",
    "pm2-start": "cross-var pm2 start process.json --env $npm_config_fhir-env",
    "pm2-stop": "cross-var pm2 stop process.json --env $npm_config_fhir-env",
    "start": "ts-node --transpile-only src/start.ts",
    "start-dev": "tsnd --respawn -r tsconfig-paths/register --clear --transpile-only src/start.ts",
    "start-dev-original": "ts-node-dev --clear --transpile-only src/start.ts",
    "test": "jest",
    "watch": "ttsc --watch"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": [
    "IE > 8",
    "Chrome > 80",
    "Firefox > 75",
    "Safari > 12",
    "Edge > 80"
  ],
  "lint-staged": {
    "**/*.ts": [
      "ttsc --noEmit",
      "eslint --ignore-pattern __tests__/ --ignore-pattern migrations/ --fix"
    ],
    "**/*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "outputPath": "dist/executable",
    "targets": [
      "latest-win-x64"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "_moduleAliases": {
    "@classes/*": [
      "src/classes/*"
    ],
    "@docs/*": [
      "src/docs/*"
    ],
    "@helpers/*": [
      "src/helpers/*"
    ],
    "@src/*": [
      "src/*"
    ],
    "@root/*": [
      "./*"
    ]
  },
  "dependencies": {
    "boolean": "^3.1.4",
    "date-fns": "^2.25.0",
    "ttypescript": "^1.5.12",
    "typescript-transform-paths": "^3.3.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@jest/types": "^27.2.5",
    "@semantic-release/git": "^10.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "babel-jest": "^27.3.1",
    "copyfiles": "^2.4.1",
    "cross-var": "^1.1.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.3.1",
    "localtunnel": "^2.0.2",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "regenerator-runtime": "^0.13.9",
    "semantic-release": "^18.0.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  }
}
